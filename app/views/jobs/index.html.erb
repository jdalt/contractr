<% provide(:title, 'Jobs Index') %>

<h1>All Jobs</h1>
<div class="row">
  <% @jobs.each do |job| %>

    <div id="job_<%= job.id %>" class="job-box">
      <a href="<%= user_job_path(current_user, job) %>"><span class="expand"></span></a> 
      <h3><%= job.name %></h3> 
      <br>
      <table class="compact-client-table">
        <tbody>
          <tr>
            <td><%= job.client.name %></td>
            <td><%= job.client.phone %></td>
            <td><%= job.client.city %>, <%= job.client.state %></td>
          </tr>
        </tbody>
      </table>
      <br>
      <table class="compact-table span6">
        <thead>
          <tr>
            <th>Work</th>
            <th></th>
            <th>Cost</th>
          </tr>
        </thead>
        <tbody>
          <% job.work_items.all.each do |item| %>
            <tr>
              <td><%= item.work_category.name %></td>
              <td></td>
              <td><%= item.client_cost %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td>Total Cost</td>
            <td></td>
            <td><%= job.total_cost %></td>
          </tr>
        </tfoot>
      </table>
      <br>
      <div> 
        <span class="bid">Bid <%= icon_ok_remove job.is_bid? %></span>
        <span class="billed">Billed <%= icon_ok_remove job.is_billed? %></span>
        <span class="paid">Paid <%= icon_ok_remove job.is_paid? %></span>
      </div>
    </div>
  <% end %>
</div>
