<% provide(:title, @job.name) %>

<h1>Job: <%= @job.name %></h1>
<div class="row">
  <div class="span8">
    <ul>
      <% @job.work_items.all.each do |item| %>
        <li><%= item.work_category.name %> - <%= item.work_amount %> at <%= item.work_category.price_per_unit %> per <%= item.work_category.unit %> = <span class="item-cost"><%= item.client_cost %></span></li>
      <% end %>
    </ul>
    <div id="total-cost"> Total Cost: <%= @job.total_cost %> </div>
  </div>
      
</div>
