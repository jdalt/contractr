<% provide(:title, 'New Job') %>
<h1>Create New Job</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@job) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %> <br>

      <h4>Work Items</h4>
      <%= f.fields_for :work_items do |wi_form| %>

        <%= wi_form.collection_select(:work_category_id, WorkCategory.all, :id, :name) %>

        <%= wi_form.label :work_amount %>
        <%= wi_form.text_field :work_amount %> <br>

      <% end %>

      <%= f.submit "Save Job", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
